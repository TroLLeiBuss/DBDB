<Page x:Class="DBDB.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DBDB"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid Background="White" Name="regIn">
        <Frame Name="RegOut" NavigationUIVisibility="Hidden" Grid.RowSpan="5" Panel.ZIndex="1" Margin="280 100 280 150"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="ВХОД" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"/>
            <TextBlock Text="Логин:"/>
            <TextBox Name="TxbLogin"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox Name="TxbPassword"/>
            <Button Height="20" Content="Регистрация" Margin="5" Click="RegIn_Click"/>
            <Button Height="20" Content="Войти" Margin="5" Click="BtnSignin_Click"/>
        </StackPanel>
    </Grid>
</Page>
